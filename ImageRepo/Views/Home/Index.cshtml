    <div class="animation-area">
        <div class="container">
            
            @{
                int count = 3;
                var totalImages = Model.IndexViewModel.Images.Count();
                int track = 0;
            }

            @foreach (var image in Model.IndexViewModel.Images)
            {
                if (count != 0)
                {
                    <div class="row">
                        @while (count != 0)
                        {
                            if (track < totalImages)
                            {
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="animation-single-int">
                                        <div class="animation-ctn-hd">
                                            <h2>@Model.IndexViewModel.Images[track].ImageDescription</h2>
                                            <p>@Model.IndexViewModel.Images[track].ImageClassification</p>
                                        </div>
                                        <div class="animation-img mg-b-15 imgContainer">
                                            @if (image.Images != null)
                                            {
                                                var base64 = Convert.ToBase64String(Model.IndexViewModel.Images[track].Images);
                                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                                <img src="@imgsrc" class="img-responsive" alt="@Model.IndexViewModel.Images[track].ImageDescription.Trim()" />
                                                <div class="overlay"><div class="text">@Model.IndexViewModel.Images[track].ImageDescription.Trim()</div></div>

                                                //style="width: 50px; height: 50px; float: left;"
                                            }
                                            else
                                            {
                                                <img class="animate-one" src="~/ImageRepo/img/widgets/2.png" alt="" />
                                            }
                                        </div>
                                        <div class="animation-action">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="animation-btn">
                                                        @*<button class="btn ant-nk-st bounce-ac">bounce</button>*@
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="animation-btn sm-res-mg-t-10 tb-res-mg-t-10 dk-res-mg-t-10">
                                                        @*<button class="btn ant-nk-st flash-ac">flash</button>*@
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mg-t-10">
                                                <div class="col-lg-6">
                                                    <div class="animation-btn">
                                                        @*<button class="btn ant-nk-st pulse-ac">pulse</button>*@
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="animation-btn sm-res-mg-t-10 tb-res-mg-t-10 dk-res-mg-t-10">
                                                        @if (userId != null && Model.IndexViewModel.Images[track].UserId.ToString() == userId)
                                                        {
                                                            <a href="/Home/Delete/@Model.IndexViewModel.Images[track].Id" class="btn btn-danger notika-btn-danger waves-effect" style="float:right"><i class="notika-icon notika-trash"></i> DELETE</a>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                count = count - 1;
                                track = track + 1;
                            }
                            else { count = 0; }
                        }
                    </div>
                    <br />

                }
                if (count == 0)
                {
                    count = 3;
                }
                if (track == totalImages)
                {
                    break;
                }
            }

        </div>
    </div>
    
